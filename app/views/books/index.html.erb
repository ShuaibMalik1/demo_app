
<h2 class="text-center">Books</h2>
<div class="table-responsive">          
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Image</th>
      </tr>
    </thead>
    <tbody>
    	<% @books.each do |book| %>
	      <tr>
	        <td><%= link_to book.dig('volumeInfo', 'title'), book_path(book['id']) %></td>
	        <td><%= image_tag book.dig('volumeInfo', 'imageLinks', 'smallThumbnail')  %></td>
	      </tr>
	    <% end %>
    </tbody>
  </table>
</div>